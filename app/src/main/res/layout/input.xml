<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/num_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/num_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <ImageButton
            android:id="@+id/delete_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:scaleType="centerInside"
            android:padding="20px"
            android:src="@drawable/delete_cal"
            android:text="C"
            android:textColor="#ffffff"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/num_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/num_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/num_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/num_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="c"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/num_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/mun_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="@drawable/key_background"
            android:text="."
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/sure_equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_weight="1"
            android:background="#ed715c"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="22dp"/>
    </LinearLayout>

</LinearLayout>