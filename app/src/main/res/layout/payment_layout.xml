<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:background="@drawable/big_layout"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/zfb"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/little_button">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/zfb"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:backgroundTint="@color/c7"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="支付宝"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/zfb_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848EAA"
                android:text="余额: 0.00"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wx"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/little_button">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/wx"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:backgroundTint="@color/c4"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="微信支付"
                android:textSize="17dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/wx_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848EAA"
                android:text="余额: 0.00"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/little_button">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/card"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:backgroundTint="@color/c1"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="储蓄卡"
                android:textSize="17dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/card_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848EAA"
                android:text="余额: 0.00"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cash"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/little_button">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cash"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:backgroundTint="@color/c9"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="现金"
                android:textSize="17dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/cash_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848EAA"
                android:text="余额: 0.00"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>